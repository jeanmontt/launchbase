{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/contents.css">
{% endblock head %}

{% block content %}
    <section class="content">

        <h1>Conte√∫dos</h1>

        <div class="cards">
            {% for item in data %}
                <div class="card" id="{{item.id}}">
                    <div class="card_image">
                        <img src="{{item.image}}" alt="{{item.title}}">
                    </div>

                    <div class="card_content">
                        <p>{{item.title}}</p>
                    </div>

                    <div class="card_info">
                        <p>{{item.by}}</p>
                        <p class="reading_time">{{item.duration}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>

    </section>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/scripts.js"></script>
{% endblock scripts %}