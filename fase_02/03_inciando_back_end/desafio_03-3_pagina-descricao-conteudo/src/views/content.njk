{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/content.css">
{% endblock head %}

{% block content %}
    <section class="content">

        <div class="cards">
            <div class="card" id="{{item.id}}">
                <div class="card_iframe">
                    <iframe src="https://blog.rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>
                </div>

                <div class="card_content">
                    <p>{{item.title}}</p>
                </div>

                <div class="card_info">
                    <p>{{item.by}}</p>
                    <p class="reading_time">{{item.duration}}</p>
                    <a href="https://blog.rocketseat.com.br/{{item.id}}" target="_blank">Link direto</a>
                </div>
            </div>
        </div>

    </section>
{% endblock content %}