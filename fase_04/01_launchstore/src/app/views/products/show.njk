{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/products/show.css">

  <title>LaunchStore |
    {{ product.name }}</title>
{% endblock head %}

{% block content %}
  <section class="product-single container">
    <div class="gallery">
      <img src="/images/1614964794152-pizza.png" alt="Pizza">
    </div>

    <div class="info">
      <h1>{{ product.name }}</h1>

      <div class="published">
        Publicado em
        {{ product.published.date }}
        às
        {{ product.published.hour }}
      </div>

      <div class="description">
        {{ product.description }}
      </div>

      <div class="price-buy">
        <div class="price">
          {{ product.price }}
          {% if product.price != product.oldPrice %}
            <span class="old-price">
              {{ product.oldPrice }}
            </span>
          {% endif %}
        </div>

        <div class="buy">
          {% if product.status == 0 %}
            <p class="unavailable">Indisponível</p>
          {% elseif product.quantity == 0 %}
            <p class="unavailable">Fora de estoque</p>
          {% else %}
            <button class="button">Comprar</button>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
{% endblock content %}