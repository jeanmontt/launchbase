{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/instructors/show.css">
  <link rel="stylesheet" href="/styles/instructors/create.css">
  <title>Gym Manager - Membro: {{ member.name }}</title>
{% endblock head %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ member.avatar_url }}/500x500) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Membro</div>
        <div>{{ member.name }}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{ member.email }}</div>
      </div>

      <div class="item">
        <div>Aniversário</div>
        <div>{{ member.birth }}</div>
      </div>

      <div class="item">
        <div>Sexo</div>
        <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
      </div>

      <div class="item">
        <div>Tipo Sanguíneo</div>
        <div>{{ member.blood }}</div>
      </div>

      <div class="item">
        <div>Peso (kg)</div>
        <div>{{ member.weight }}</div>
      </div>

      <div class="item">
        <div>Altura (cm)</div>
        <div>{{ member.height }}</div>
      </div>

      <div class="item">
        <div>Aluno de</div>
        <div>{{ member.instructor_name }}</div>
      </div>

      <a class="button" href="/membros/{{ member.id }}/editar">Editar</a>
    </section>
  </div>

{% endblock content %}