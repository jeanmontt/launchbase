{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/instructors/show.css">
  <link rel="stylesheet" href="/styles/instructors/edit.css">
  <link rel="stylesheet" href="/styles/instructors/create.css">
  <title>Gym Manager - Editar membro</title>
{% endblock head %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ member.avatar_url }}/500x500) no-repeat center center / cover"></section>

    <section class="details">
      <form method="POST" action="/membros?_method=PUT">
        <h3>Editar membro</h3>

        {% include "members/fields.njk" %}

        <input type="hidden" name="id" value="{{ member.id }}">
      </form>

      <form id="form_delete" method="post" action="/membros?_method=DELETE">
        <input type="hidden" name="id" value="{{ member.id }}">

        <button type="submit">Deletar</button>
      </form>
    </section>
  </div>
{% endblock content %}

{% block script %}
  <script src="/scripts/formDelete.js"></script>
{% endblock script %} 