{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/instructors/index.css">
  <title>Gym Manager - Instrutores</title>
{% endblock head %}

{% block content %}
  <div class="card table">
    <div class="header">
      <a class="button" href="/instrutores/novo">Novo</a>

      <form action="/instrutores" method="GET">
        <input 
          type="text" 
          name="filter"
          placeholder="Nome ou atendimento" 
          value="{{ filter }}"
        >

        <button type="submit">Filtrar</button>
      </form>
    </div>
    
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background-image: url({{ instructor.avatar_url }})"></span>
              {{ instructor.name }}
            </td>
            <td>{{ instructor.services }}</td>
            <td>{{ instructor.total_students }}</td>
            <td><a href="/instrutores/{{ instructor.id }}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div 
      class="pagination"
      data-page={{pagination.page}}
      data-total={{pagination.total}}
      data-filter={{filter}}
    ></div>
  </div>
{% endblock content %}

{% block scripts %}
  <script src="/scripts/indexPagination.js"></script>
{% endblock scripts %}