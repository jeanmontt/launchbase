{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/instructors/index.css">
  <title>Gym Manager - Instrutores</title>
{% endblock head %}

{% block content %}
  <div class="card table">
    <table width="100%">
      <thead>
        <tr>
          <th>Instrutor</th>
          <th>Atendimento</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for instructor in instructors %}
          <tr>
            <td>
              <span style="background-image: url({{ instructor.avatar_url }})"></span>
              {{ instructor.name }}
            </td>
            <td>{{ instructor.services }}</td>
            <td><a href="/instrutores/{{ instructor.id }}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}