{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/instructors/index.css">
  <title>Gym Manager - Membros</title>
{% endblock head %}

{% block content %}
  <div class="card table">
    <a href="/membros/novo">Novo</a>

    <table width="100%">
      <thead>
        <tr>
          <th>Membro</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>
        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{ member.avatar_url }})"></span>
              {{ member.name }}
            </td>
            <td>{{ member.email }}</td>
            <td>{{ member.weight }}kg</td>
            <td>{{ member.height }}cm</td>
            <td><a href="/membros/{{ member.id }}">Ver</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}