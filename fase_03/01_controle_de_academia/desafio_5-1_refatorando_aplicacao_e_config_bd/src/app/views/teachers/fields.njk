<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="https://" value="{{ teacher.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Nome completo</div>
  <div>
    <input type="text" name="name" placeholder="Digite o nome coompleto" value="{{ teacher.name }}">
  </div>
</div>

<div class="item">
  <div>Data de nascimento</div>
  <div>
    <input type="date" name="birth" value="{{ teacher.birth }}">
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
    <select name="education">
      <option value="EM" {% if teacher.graduation == "EM" %} selected="selected" {% endif %}>
        Ensino Médio Completo
      </option>
      <option value="ES" {% if teacher.graduation == "ES" %} selected="selected" {% endif %}>
        Ensino Superior Completo
      </option>
      <option value="M" {% if teacher.graduation == "M" %} selected="selected" {% endif %}>
        Mestrado
      </option>
      <option value="D" {% if teacher.graduation == "D" %} selected="selected" {% endif %}>
        Doutorado
      </option>
    </select>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <span>
      <input type="radio" name="class_type" value="À distância" {% if teacher.class_type == "À distância" %} checked="checked" {% endif %}>
      À distância
    </span>
    <span>
      <input type="radio" name="class_type" value="Presencial" {% if teacher.class_type == "Presencial" %} checked="checked" {% endif %}>
      Presencial
    </span>
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input type="text" name="services" placeholder="Digite as matérias separadas por vírgula" value="{{ teacher.services }}">
  </div>
</div>

<button type="submit">Salvar</button>