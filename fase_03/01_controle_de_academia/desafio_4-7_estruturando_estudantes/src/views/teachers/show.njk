{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/create.css">
  <link rel="stylesheet" href="/styles/show.css">

  <title>Class Manager - Professor: {{ teacher.name }}</title>
{% endblock head %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ teacher.avatar_url }}/500x500) no-repeat center center / cover"></section>

    <section class="details">
      <h3>Detalhes do professor</h3>

      <div class="item">
        <div>Nome completo</div>
        <div>{{ teacher.name }}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{ teacher.age }}</div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{ teacher.graduation }}</div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>{{ teacher.class_type }}</div>
      </div>

      <div class="item">
        <div>Acompanhamento</div>
        <div>
            {% for service in teacher.services %}
              <span>{{ service }}</span>
            {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{ teacher.created_at }}</div>
      </div>

      <a href="/professores/{{ teacher.id }}/editar">Editar</a>
    </section>
  </div>
{% endblock content %}