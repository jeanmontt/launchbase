{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/show.css">
  <link rel="stylesheet" href="/styles/create.css">
  <link rel="stylesheet" href="/styles/edit.css">

  <title>Class Manager - Editar Aluno: {{ student.name }}</title>
{% endblock head %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ student.avatar_url }}/500x500) no-repeat center center / cover"></section>

    <section class="details">
      <form method="post" action="/alunos?_method=PUT">

        <h3>Editar Aluno</h3>

        {% include "students/fields.njk"%}

        <input type="hidden" name="id" value="{{ student.id }}">
      </form>

      <form id="form_delete" method="post" action="/alunos?_method=DELETE">
        <input type="hidden" name="id" value="{{ student.id }}">

        <button type="submit">Deletar</button>
      </form>
    </section>
  </div>
{% endblock content %}

{% block scripts %}
  <script src="/scripts/formDelete.js"></script>
{% endblock scripts %}