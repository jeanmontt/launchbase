{% extends "layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/teachers/index.css">
  <link rel="stylesheet" href="/styles/teachers/create.css">

  <title>Class Manager - Novo Professor</title>
{% endblock head %}

{% block content %}
  <form class="card" method="POST" action="/professores">
    <section 
      class="avatar" 
      style="background: url(https://source.unsplash.com/collection/1533061/500x500) no-repeat center center / cover">
    </section>

    <section class="details">
      <h3>Novo Professor</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      </div>

      <div class="item">
        <div>Nome completo</div>
        <div>
          <input type="text" name="name" placeholder="Digite o nome do professor">
        </div>
      </div>

      <div class="item">
        <div>Data de nascimento</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <select name="education">
          <option value="EM">Ensino Médio Completo</option>
          <option value="ES" selected>Ensino Superior Completo</option>
          <option value="M">Mestrado</option>
          <option value="D">Doutorado</option>
        </select>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <span>
            <input type="radio" name="class_type" value="À distância" checked>
            À distância
          </span>
          <span>
            <input type="radio" name="class_type" value="Presencial">
            Presencial
          </span>
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="services" placeholder="Digite as matérias separadas por vírgula">
        </div>
      </div>

      <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock content %}